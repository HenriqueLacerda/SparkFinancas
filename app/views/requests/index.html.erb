<table>
  <tr>
    <th>Cliente</th>
    <th>Clientenome</th>
    <th>Clienteendereco</th>
    <th>Clientenumero</th>
    <th>Clientebairro</th>
    <th>Clientecidade</th>
    <th>Clientecep</th>
    <th>Clienteestado</th>
    <th>Vendedor</th>
    <th>Vendedornome</th>
    <th>Formapagamento</th>
    <th>Valorfrete</th>
    <th>Valorseguro</th>
    <th>Valoroutrasdespesas</th>
    <th>Tipodesconto</th>
    <th>Quantidadedesconto</th>
    <th>Valortotaldesconto</th>
    <th>Quantidadecomissao</th>
