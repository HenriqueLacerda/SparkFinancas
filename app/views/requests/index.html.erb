<% @requests.each do |request| %>
  <tr>
    <td><%= request.cliente_id %></td>
    <td><%= request.clientenome %></td>
    <td><%= request.clienteendereco %></td>
    <td><%= request.clientenumero %></td>
    <td><%= request.clientebairro %></td>
    <td><%= request.clientecidade %></td>
    <td><%= request.clientecep %></td>
    <td><%= request.clienteestado %></td>
    <td><%= request.vendedor_id %></td>
    <td><%= request.vendedornome %></td>
    <td><%= request.formapagamento_id %></td>
    <td><%= request.valorfrete %></td>
    <td><%= request.valorseguro %></td>
    <td><%= request.valoroutrasdespesas %></td>
    <td><%= request.tipodesconto %></td>
    <td><%= request.quantidadedesconto %></td>
    <td><%= request.valortotaldesconto %></td>
    <td><%= request.quantidadecomissao %></td>
    <td><%= request.valortotalcomissao %></td>
    <td><%= request.valortotalprodutos %></td>
    <td><%= request.valortotalpedido %></td>
    <td><%= link_to 'Show', request %></td>
    <td><%= link_to image_tag("alterar.png", :border => 0), edit_request_path(request) %></td>
    <td><%= link_to image_tag("remover.png", :border => 0), request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
