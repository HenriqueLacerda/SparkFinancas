<h1> Fornecedores </h1>
<br />
<%= link_to 'Novo Fornecedor', new_provider_path %>
<br /><br />
<table>
  <tr>
    <th>Nome</th>
    <th>Endereco</th>
    <th>Numero</th>
    <th>Bairro</th>
    <th>Cep</th>
    <th></th>
    <th></th>
  </tr>

<% @providers.each do |provider| %>
  <tr>
    <td><%= link_to provider.nome, provider %></td>
    <td><%= provider.endereco %></td>
    <td><%= provider.numero %></td>
    <td><%= provider.bairro %></td>
    <td><%= provider.cep %></td>
    <td class="botaoAlterar"><%= link_to image_tag("alterar.png", :border => 0), edit_provider_path(provider) %></td>
    <td class="botaoRemover"><%= link_to image_tag("remover.png", :border => 0), provider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @providers, :update => 'div_principal' %>



