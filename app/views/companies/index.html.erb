<% @companies.each do |company| %>
  <tr>
    <td><%= company.nome %></td>
    <td><%= company.endereco %></td>
    <td><%= company.numero %></td>
    <td><%= company.bairro %></td>
    <td><%= company.cep %></td>
    <td><%= company.email %></td>
    <td><%= company.login %></td>
    <td><%= company.senha %></td>
    <td><%= link_to 'Show', company %></td>
    <td><%= link_to image_tag("alterar.png", :border => 0), edit_company_path(company) %></td>
    <td><%= link_to image_tag("remover.png", :border => 0), company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
