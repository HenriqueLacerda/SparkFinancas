<h1>Listing units</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Abreviado</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @units.each do |unit| %>
  <tr>
    <td><%= unit.nome %></td>
    <td><%= unit.abreviado %></td>
    <td><%= link_to 'Show', unit %></td>
    <td><%= link_to image_tag("alterar.png", :border => 0), edit_unit_path(unit) %></td>
    <td><%= link_to image_tag("remover.png", :border => 0), unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
