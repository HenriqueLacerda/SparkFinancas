<h1>Listing cities</h1>

<table>
  <tr>
    <th>Cidade</th>
    <th>Estado</th>
    <th>Pais</th>
    <th>Codigocidade</th>
    <th>Codigoestado</th>
    <th>Codigopais</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cities.each do |city| %>
  <tr>
    <td><%= city.cidade %></td>
    <td><%= city.estado %></td>
    <td><%= city.pais %></td>
    <td><%= city.codigocidade %></td>
    <td><%= city.codigoestado %></td>
    <td><%= city.codigopais %></td>
    <td><%= city.latitude %></td>
    <td><%= city.longitude %></td>
    <td><%= link_to 'Show', city %></td>
    <td><%= link_to image_tag("alterar.png", :border => 0), edit_city_path(city) %></td>
    <td><%= link_to image_tag("remover.png", :border => 0), city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @cities, :update => 'div_principal' %>
