<% @accounts.each do |account| %>
  <tr>
    <td><%= link_to account.nome, account %></td>
    <td><%= link_to image_tag("alterar.png", :border => 0), edit_account_path(account) %></td>
    <td><%= link_to image_tag("remover.png", :border => 0), account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

