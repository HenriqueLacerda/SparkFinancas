<h1>Listing services</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Descricao</th>
    <th>Valor</th>
    <th>Unidade</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @services.each do |service| %>
  <tr>
    <td><%= service.nome %></td>
    <td><%= service.descricao %></td>
    <td><%= service.valor %></td>
    <td><%= service.unidade_id %></td>
    <td><%= link_to 'Show', service %></td>
    <td><%= link_to image_tag("alterar.png", :border => 0), edit_service_path(service) %></td>
    <td><%= link_to image_tag("remover.png", :border => 0), service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
